# API Configuration
VITE_API_BASE_URL=http://127.0.0.1:8000/api
VITE_BACKEND_URL=http://127.0.0.1:8000

# Authentication
VITE_JWT_ACCESS_TOKEN_KEY=access_token
VITE_JWT_REFRESH_TOKEN_KEY=refresh_token

# App Configuration
VITE_APP_NAME=MyGuide
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Algeria Tourism Guide Application

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false

# External Services (optional)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-token-here

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# Social Media (optional)
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_TWITTER_API_KEY=your-twitter-api-key

# Image Upload Configuration
VITE_MAX_FILE_SIZE=5242880  # 5MB in bytes
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Cache Configuration
VITE_CACHE_DURATION=300000  # 5 minutes in milliseconds

# Error Reporting (optional)
VITE_SENTRY_DSN=your-sentry-dsn-here

# Feature Flags
VITE_ENABLE_CHATBOT=true
VITE_ENABLE_TRIP_PLANNER=true
VITE_ENABLE_USER_REVIEWS=true
VITE_ENABLE_OFFLINE_MODE=false